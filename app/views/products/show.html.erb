<% content_for :body_class, 'bg-light' %>

<section class="section product-show">
  <h1 class="title is-2"><%= @product.title %></h1>
  <div class="columns">
    <div class="column is-5">
      <div class="feature-image">
        <%= image_tag @product.image.variant(resize: '500X500') if @product.image.attached? %>
      </div>
    </div>
    <div class="column is-7">
      <div class="content pa4 mt3 bg-white border-radius-3">
        <h3 class="subtitle is-4">Description</h3>
        <%= @product.description %>
      </div>
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@product.price) %></h4>
        <% if !current_user&.is_admin %>
          <%= button_to 'Add to cart', line_items_path(product_id: @product), class: 'button is-primary add-to-cart' %>
        <% end %>
        <% if current_user&.is_admin %>
          <div class="columns">
            <div class="column is-6">
              <%= link_to 'Edit', edit_product_path(@product), class: "button is-fullwidth" %>
            </div>
            <div class="column is-6">
              <%= link_to 'Delete', product_path(@product), method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-fullwidth" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</section>