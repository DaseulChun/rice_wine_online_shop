<%= simple_form_for @product, html: { multipart: true } do |f| %>
<%= f.error_notification %>

  <div class="form__group form__group--title">
    <%= f.input :title , 
        required: true, 
        input_html: { class: "input" }, 
        wrapper: false, 
        label_html: { class: "label" } %>
  </div>
 
  <div class="form__group form__group--price">
    <%= f.input :price, 
        required: true, 
        input_html: { class: "input", maxlength: 7 }, 
        wrapper: false, 
        label_html: { class: "label" } %>
  </div>
   
  <div class="form__group form__group--description">
    <%= f.input :description, 
        required: true, 
        input_html: { class: "textarea" },
        wrapper: false, 
        label_html: { class: "label" } %>
  </div>
 
  <div class="form__group form__group--file">
    <label class="label">Add images</label>
 
    <label class="file__label">
      <%= f.input :image, 
          as: :file, 
          input_html: { class:"file__input product-image" }, 
          label: false, 
          wrapper: false %>
      <span class="file__cta">
        <span class="file__icon"><i class="fa fa-upload"></i></span>
        <span>Choose a fileâ€¦</span>
      </span>
    </label>
    
  </div>

  <div class="form__group form__group--btn">
    <%= f.button :submit, class: 'btn-dark mr3' %>
    <%= link_to 'Cancel', products_path, class:'btn-transparent' %>
  </div>

<% end %>
